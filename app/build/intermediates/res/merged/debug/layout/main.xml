<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#1D702D"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.28" >

            <ImageView
                android:id="@+id/spacer"
                android:layout_width="47dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/spacer" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/spacer"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp" >

                <!-- Joueur 1 -->

                <ImageView
                    android:id="@+id/carteJ1"
                    android:layout_width="53dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/carte_dos" />

                <TextView
                    android:id="@+id/txtNameJ1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/carteJ1"
                    android:gravity="right|top"
                    android:text="Name1"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/spacer"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtNameJ2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="2dp"
                    android:text="Name2"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageView
                    android:id="@+id/carteJ2"
                    android:layout_width="53dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="#1D702D"
                    android:src="@drawable/carte_dos" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/spacer"
                android:gravity="right"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/carteJ4"
                    android:layout_width="53dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="#1D702D"
                    android:src="@drawable/carte_dos" />

                <TextView
                    android:id="@+id/txtNameJ4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="2dp"
                    android:text="Name4"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spacer"
                android:layout_centerHorizontal="true" >

                <!-- Joueur Humain -->

                <ImageView
                    android:id="@+id/carteHuman"
                    android:layout_width="53dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="#1D702D"
                    android:src="@drawable/carte_dos" />

                <TextView
                    android:id="@+id/txtNameHuman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/carteHuman"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/carteHuman"
                    android:gravity="right"
                    android:text="NameH"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:src="@drawable/spacer" />
        </LinearLayout>

        <!--  LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/contrats"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="10pt" />
        </LinearLayout -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnMain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Valider" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
	    <GridView
	        android:id="@+id/jeuHuman"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:gravity="top"
	        android:numColumns="6" >
	    </GridView>
    </LinearLayout>

</LinearLayout>